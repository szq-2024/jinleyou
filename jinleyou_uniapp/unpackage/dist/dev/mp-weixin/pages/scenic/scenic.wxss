.scenic-detail-container {
  padding-bottom: 100rpx;
  background-color: #f5f5f5;
}
.scenic-detail-container .image-swiper {
  width: 100%;
  height: 500rpx;
}
.scenic-detail-container .image-swiper .swiper-image {
  width: 100%;
  height: 100%;
}
.scenic-detail-container .basic-info {
  padding: 30rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
}
.scenic-detail-container .basic-info .title-section {
  margin-bottom: 30rpx;
}
.scenic-detail-container .basic-info .title-section .scenic-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}
.scenic-detail-container .basic-info .info-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.scenic-detail-container .basic-info .info-row .info-text {
  font-size: 28rpx;
  color: #666;
  margin-left: 10rpx;
}
.scenic-detail-container .section {
  background-color: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
}
.scenic-detail-container .section .section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}
.scenic-detail-container .section .section-content .description {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}
.scenic-detail-container .section .review-list .review-item {
  display: flex;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}
.scenic-detail-container .section .review-list .review-item .user-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.scenic-detail-container .section .review-list .review-item .review-content {
  flex: 1;
}
.scenic-detail-container .section .review-list .review-item .review-content .user-info {
  margin-bottom: 15rpx;
}
.scenic-detail-container .section .review-list .review-item .review-content .user-info .username {
  font-size: 28rpx;
  color: #333;
  margin-right: 15rpx;
}
.scenic-detail-container .section .review-list .review-item .review-content .review-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.5;
  margin-bottom: 15rpx;
}
.scenic-detail-container .section .review-list .review-item .review-content .review-time {
  font-size: 24rpx;
  color: #999;
  display: block;
  margin-bottom: 15rpx;
}
.scenic-detail-container .section .review-list .review-item .review-content .review-images {
  display: flex;
  flex-wrap: wrap;
}
.scenic-detail-container .section .review-list .review-item .review-content .review-images .review-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 8rpx;
  margin-right: 15rpx;
  margin-bottom: 15rpx;
}
.scenic-detail-container .action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  box-shadow: 0 -2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.scenic-detail-container .action-bar .action-btn {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  font-size: 28rpx;
  border-radius: 0;
  border: none;
}
.scenic-detail-container .action-bar .action-btn.collect-btn {
  background-color: #fff;
  color: #666;
}
.scenic-detail-container .action-bar .action-btn.review-btn {
  background-color: #2867CE;
  color: #fff;
  margin: 0 20rpx;
  border-radius: 40rpx;
}
.scenic-detail-container .review-modal {
  background-color: #fff;
  padding: 30rpx;
  border-radius: 20rpx 20rpx 0 0;
}
.scenic-detail-container .review-modal .modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}
.scenic-detail-container .review-modal .modal-header .modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.scenic-detail-container .review-modal .review-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  background-color: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
  margin-bottom: 30rpx;
}
.scenic-detail-container .review-modal .submit-btn {
  background-color: #007aff;
  color: #fff;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
}